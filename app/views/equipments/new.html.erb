 <div class="container col-6">
  <h2 class='mt-3'><strong>Add New Equipment!</strong></h2>
  <div class='form-login mt-0'>

    <%= simple_form_for(@equipment, as: :equipment, method: :post, url: equipments_path) do |f| %>
     <%= f.input :name %>
     <%= f.input :description %>
     <%= f.input :price_per_day, label: 'Price per Day in $' %>
     <%= f.input :photo, as: :file %>
     <%= f.submit "Post", class: "btn btn-primary" %>
     <% end %>
  </div>
</div>
